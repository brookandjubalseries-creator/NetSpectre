<Application x:Class="NetSpectre.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NetSpectre.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:InvertBoolConverter x:Key="InvertBoolConverter" />
            <conv:AlertSeverityToColorConverter x:Key="AlertSeverityToColorConverter" />
            <conv:AlertSeverityToTextColorConverter x:Key="AlertSeverityTextConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
